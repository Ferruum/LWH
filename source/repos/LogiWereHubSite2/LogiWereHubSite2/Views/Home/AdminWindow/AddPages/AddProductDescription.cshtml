// Разметка представления
@model LogiWereHubSite2.Models.ProductDescriptionModel
@{
    ViewData["Title"] = "Add Product Description";
}

<h2>Add New Product Description</h2>

<form asp-action="AddProductDescription" method="post">
    <div class="form-group">
        <label asp-for="Name">Product Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Product Description:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Product Description</button>
</form>