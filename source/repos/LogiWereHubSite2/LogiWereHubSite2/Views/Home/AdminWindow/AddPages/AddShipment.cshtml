@model LogiWereHubSite2.Models.ShipmentModel
@{
    ViewData["Title"] = "Add Shipment";
}

<h2>Add Shipment</h2>

<form asp-action="AddShipment" method="post">
    <div class="form-group">
        <label asp-for="OrderId">Order:</label>
        <select asp-for="OrderId" class="form-control">
            @foreach (var order in ViewBag.Orders)
            {
                <option value="@order.OrderId">@order.OrderId</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DepartureDate">Departure Date:</label>
        <input asp-for="DepartureDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="ArrivalDate">Arrival Date:</label>
        <input asp-for="ArrivalDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="VehicleId">Vehicle:</label>
        <select asp-for="VehicleId" class="form-control">
            @foreach (var vehicle in ViewBag.Vehicles)
            {
                <option value="@vehicle.VehicleId">@vehicle.VehicleId</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StaffId">Staff:</label>
        <select asp-for="StaffId" class="form-control">
            @foreach (var staff in ViewBag.Staff)
            {
                <option value="@staff.StaffId">@staff.StaffId</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Shipment</button>
</form>
