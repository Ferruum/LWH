@model LogiWereHubSite2.Models.VehicleModel
@{
    ViewData["Title"] = "Add Vehicle";
}

<h2>Add Vehicle</h2>

<form asp-action="AddVehicle" method="post">
    <div class="form-group">
        <label asp-for="RegistrationNumber">Registration Number:</label>
        <input asp-for="RegistrationNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VehicleTypeId">Vehicle Type:</label>
        <select asp-for="VehicleTypeId" class="form-control">
            @foreach (var vehicleType in ViewBag.VehicleTypes)
            {
                <option value="@vehicleType.VehicleTypeId">@vehicleType.VehicleTypeName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Vehicle</button>
</form>
