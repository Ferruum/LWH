@model LogiWereHubSite2.Models.OrderTypeModel
@{
    ViewData["Title"] = "Edit Order Type";
}

<h2>Edit Order Type</h2>

<form asp-action="EditOrderType" method="post">
    <input type="hidden" asp-for="OrderTypeId" />

    <div class="form-group">
        <label asp-for="OrderType1">Order Type:</label>
        <input asp-for="OrderType1" class="form-control" />
        <span asp-validation-for="OrderType1" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
