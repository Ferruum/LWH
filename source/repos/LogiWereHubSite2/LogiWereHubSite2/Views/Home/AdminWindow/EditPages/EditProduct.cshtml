@model LogiWereHubSite2.Models.ProductModel

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantityOnWarehouse">Quantity On Warehouse:</label>
        <input asp-for="QuantityOnWarehouse" class="form-control" />
        <span asp-validation-for="QuantityOnWarehouse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WarehouseId">Warehouse:</label>
        <select asp-for="WarehouseId" class="form-control" asp-items="@(new SelectList(ViewBag.Warehouses, "Value", "Text"))">
            <option value="">-- Select Warehouse --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DescriptionId">Description:</label>
        <select asp-for="DescriptionId" class="form-control" asp-items="@(new SelectList(ViewBag.Descriptions, "Value", "Text"))">
            <option value="">-- Select Description --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
