@model LogiWereHubSite2.Models.ProductDescriptionModel

@{
    ViewData["Title"] = "Edit Product Description";
}

<h2>Edit Product Description</h2>

<form asp-action="EditProductDescription" method="post">
    <input type="hidden" asp-for="DescriptionId" />

    <div class="form-group">
        <label asp-for="Name">Product Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
