@model LogiWereHubSite2.Models.staffModel

@{
    ViewData["Title"] = "Edit Staff";
}

<h2>Edit Staff</h2>

<form asp-action="EditStaff" method="post">
    <input type="hidden" asp-for="StaffId" />

    <div class="form-group">
        <label asp-for="Salary">Salary:</label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HireDate">Hire Date:</label>
        <input asp-for="HireDate" class="form-control" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WarehouseId">Warehouse ID:</label>
        <input asp-for="WarehouseId" class="form-control" />
        <span asp-validation-for="WarehouseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PositionId">Position ID:</label>
        <input asp-for="PositionId" class="form-control" />
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId">User ID:</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
