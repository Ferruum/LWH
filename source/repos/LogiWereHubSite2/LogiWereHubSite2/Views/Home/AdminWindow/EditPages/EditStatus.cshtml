@model LogiWereHubSite2.Models.StatusModel

@{
    ViewData["Title"] = "Edit Status";
}

<h2>Edit Status</h2>

<form asp-action="EditStatus" method="post">
    <input type="hidden" asp-for="StatusId" />

    <div class="form-group">
        <label asp-for="OrderStatus">Order Status:</label>
        <input asp-for="OrderStatus" class="form-control" />
        <span asp-validation-for="OrderStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
