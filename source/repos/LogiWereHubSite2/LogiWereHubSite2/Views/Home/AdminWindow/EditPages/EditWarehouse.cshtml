@model LogiWereHubSite2.Models.WarehouseModel

@{
    ViewData["Title"] = "Edit Warehouse";
}

<h2>Edit Warehouse</h2>

<form asp-action="EditWarehouse" method="post">
    <input type="hidden" asp-for="WarehouseId" />

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Coordinates">Coordinates:</label>
        <input asp-for="Coordinates" class="form-control" />
        <span asp-validation-for="Coordinates" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArrivalDate">Arrival Date:</label>
        <input asp-for="ArrivalDate" class="form-control" />
        <span asp-validation-for="ArrivalDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CapacityId">Capacity:</label>
        <input asp-for="CapacityId" class="form-control" />
        <span asp-validation-for="CapacityId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
